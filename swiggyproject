void chicken_tikka_upd()
{
	char n[30],field[20],newdata[20],ch;
	FILE *fp,*fp1;
	fp=fopen("chicken_tikka_rec.txt","r+");
	
	if(fp==NULL)
	{
		printf("\nCannot open file\n");
	}
	printf("\n Enter person name whose rec u want to update");
	scanf("%s",n);
	
	while(fscanf(fp,"%s%s%s%s",coustomer.name,coustomer.email,coustomer.add,coustomer.ph)!=EOF)
	{
		
		if(strcmp(coustomer.name,n)==0)
		{
				printf("RECORD FOUND");
		
			printf("\n\t\t\t\t\t\t%s\n\t\t\t\t\t\t%s\n\t\t\t\t\t\t%s\n\t\t\t\t\t\t%s",coustomer.name,coustomer.email,coustomer.add,coustomer.ph);
			
			printf("\n Enter field name which u want to update");
			scanf("%s",field);
			if(strcmp(field,"name")==0)
			{
				printf("Enter new data");
				
				scanf("%s",coustomer.name);
				
				fp1=fopen("chicken_tikka_rec.txt","w");	
	        	fprintf(fp1,"\n\t\t\t\t\t\t%s\n\t\t\t\t\t\t%s\n\t\t\t\t\t\t%s\n\t\t\t\t\t\t%s",coustomer.name,coustomer.email,coustomer.add,coustomer.ph);
		
				printf("RECORD UPDATE'D");
				printf("\nDo You Want To Continue Shopping PRESS 'Y' And for Exit PRESS 'N'\n");
				fflush(stdin);
				scanf("%c",&ch);
				if((ch=='Y')||(ch=='y'))
				{
					go();
					   	 	
				}
				
			}
			else if(strcmp(field,"email")==0)
			{
				printf("Enter new data");
				
				scanf("%s",coustomer.email);
				
				fp1=fopen("chicken_tikka_rec.txt","w");	
	        	fprintf(fp1,"\n\t\t\t\t\t\t%s\n\t\t\t\t\t\t%s\n\t\t\t\t\t\t%s\n\t\t\t\t\t\t%s",coustomer.name,coustomer.email,coustomer.add,coustomer.ph);
		
				printf("RECORD UPDATE'D");
				printf("\nDo You Want To Continue Shopping PRESS 'Y' And for Exit PRESS 'N'\n");
				fflush(stdin);
				scanf("%c",&ch);
				if((ch=='Y')||(ch=='y'))
				{
					go();
					   	 	
				}
			}
			else if(strcmp(field,"add")==0)
			{
				printf("Enter new data");
				
				scanf("%s",coustomer.add);
				
				fp1=fopen("chicken_tikka_rec.txt","w");	
	        	fprintf(fp1,"\n\t\t\t\t\t\t%s\n\t\t\t\t\t\t%s\n\t\t\t\t\t\t%s\n\t\t\t\t\t\t%s",coustomer.name,coustomer.email,coustomer.add,coustomer.ph);
		
				printf("RECORD UPDATE'D");
				printf("\nDo You Want To Continue Shopping PRESS 'Y' And for Exit PRESS 'N'\n");
				fflush(stdin);
				scanf("%c",&ch);
				if((ch=='Y')||(ch=='y'))
				{
					go();
					   	 	
				}
			}
			else if(strcmp(field,"phone")==0)
			{
				printf("Enter new data");
				
				scanf("%s",coustomer.ph);
				
				fp1=fopen("chicken_tikka_rec.txt","w");	
	        	fprintf(fp1,"\n\t\t\t\t\t\t%s\n\t\t\t\t\t\t%s\n\t\t\t\t\t\t%s\n\t\t\t\t\t\t%s",coustomer.name,coustomer.email,coustomer.add,coustomer.ph);
		
				printf("RECORD UPDATE'D");
				printf("\nDo You Want To Continue Shopping PRESS 'Y' And for Exit PRESS 'N'\n");
				fflush(stdin);
				scanf("%c",&ch);
				if((ch=='Y')||(ch=='y'))
				{
					go();
					   	 	
				}
			}
			else
			{
				printf("REC  not found");
			}
		}
	
		
	}	
	fclose(fp);
	fclose(fp1);
}
void tandor_chicken_upd()
{
	char n[30],field[20],newdata[20],ch;
	FILE *fp,*fp1;
	fp=fopen("tandor_chicken_coustomer_rec.txt","r+");
	
	if(fp==NULL)
	{
		printf("\nCannot open file\n");
	}
	printf("\n Enter person name whose rec u want to update");
	scanf("%s",n);
	
	while(fscanf(fp,"%s%s%s%s",coustomer.name,coustomer.email,coustomer.add,coustomer.ph)!=EOF)
	{
		
		if(strcmp(coustomer.name,n)==0)
		{
				printf("RECORD FOUND");
		
			printf("\n\t\t\t\t\t\t%s\n\t\t\t\t\t\t%s\n\t\t\t\t\t\t%s\n\t\t\t\t\t\t%s",coustomer.name,coustomer.email,coustomer.add,coustomer.ph);
			
			printf("\n Enter field name which u want to update");
			scanf("%s",field);
			if(strcmp(field,"name")==0)
			{
				printf("Enter new data");
				
				scanf("%s",coustomer.name);
				
				fp1=fopen("tandor_chicken_coustomer_rec.txt","w");	
	        	fprintf(fp1,"\n\t\t\t\t\t\t%s\n\t\t\t\t\t\t%s\n\t\t\t\t\t\t%s\n\t\t\t\t\t\t%s",coustomer.name,coustomer.email,coustomer.add,coustomer.ph);
		
				printf("RECORD UPDATE'D");
				printf("\nDo You Want To Continue Shopping PRESS 'Y' And for Exit PRESS 'N'\n");
				fflush(stdin);
				scanf("%c",&ch);
				if((ch=='Y')||(ch=='y'))
				{
					go();
					   	 	
				}
				
			}
			else if(strcmp(field,"email")==0)
			{
				printf("Enter new data");
				
				scanf("%s",coustomer.email);
				
				fp1=fopen("tandor_chicken_coustomer_rec.txt","w");	
	        	fprintf(fp1,"\n\t\t\t\t\t\t%s\n\t\t\t\t\t\t%s\n\t\t\t\t\t\t%s\n\t\t\t\t\t\t%s",coustomer.name,coustomer.email,coustomer.add,coustomer.ph);
		
				printf("RECORD UPDATE'D");
