struct project
{ 
 char name[40];
 char add[40];
 char email[40];
 char ph[20];
 }coustomer;
 
struct login 
{
	char name[20];
	char pass[20];
	
}l;

main()
{
	char ch;
	 int n;   
	
	printf("*********************************************** WELCOME TO SWIGGY ***********************************************\n");
	printf("\n\t\t\t\t------------------------------------------");
	printf("\n\t\t\t\t<<<<<<<<<<<<<<<< LOGIN-PAGE >>>>>>>>>>>>>>");
	printf("\n\t\t\t\t------------------------------------------");
	
	printf("\n\n\t\t\t\t\t\tSelect Your Login");
	printf("\n\t\t\t\t\t\t1.....SIGN UP");
	
	printf("\n\t\t\t\t\t\t2.....SIGN IN");
	scanf("%d",&n);
	if(n==1)
	{
		
	
	 	char u[20],p[20];
		FILE *fp;
		fp=fopen("login1.txt","w");
		
		printf("\n\t\t\t\t\t\tEnter Username:");
		scanf("%s",l.name);
		printf("\n\t\t\t\t\t\tEnter Password:");
		scanf("%s",l.pass);
	
		fprintf(fp,"\n\n%s \n\n%s",l.name,l.pass);
	    printf("\n\t\t\t\t------------------------------------------");
		printf("\n\t\t\t\t<<<<<<<<<<<<< REGISTRATION DONE >>>>>>>>>>");
		printf("\n\t\t\t\t------------------------------------------");
		
		fclose(fp);
		
		 login1();
    }
	else if(n==2)
	{
		log();
		
	}
	else if(n>=2)
	{
		printf("\nPlease Enter Right Login....");
	}
   
	

}
void login1()
{
	char ch;
	printf("\n\t\t\t\t DO U WANT TO SIGN IN RIGHT NOW PRESS 'y' ");
	fflush(stdin);
	scanf("%c",&ch);
	if((ch=='Y')||(ch=='y'))
	{
		log();	
	
    }
}
void log()
{
			    char u[20],p[20];
			    printf("\n \t\t\t\t SIGN IN");
				printf("\n\t\t\t\t------------------------------------------");
				printf("\n\t\t\t\t<<<<<<<<<<<<<<<< LOGIN HERE >>>>>>>>>>>>>>\n");
				printf("\t\t\t\t------------------------------------------\n");
	
				printf("\t\t\t\t\t\tEnter Username: ");
				scanf("%s",u);
				printf("\t\t\t\t\t\tEnter Password: ");
				scanf("%s",p);
			
				FILE *fp1;
				fflush(stdin);
	
				fp1=fopen("login1.txt","r");
				
				while(fscanf(fp1,"\n %s %s",l.name,l.pass)!=EOF)
				{
					if(((strcmp(l.name,u)==0))&&((strcmp(l.pass,p)==0)))
			   		{
			    		printf("\n\t\t\t\t------------------------------------------");
						printf("\n\t\t\t\t<<<<<<<<<<<<<<< LOGIN CORRECT >>>>>>>>>>>>");
						printf("\n\t\t\t\t------------------------------------------");
						go();
			   	 	}			 		
		    	    else 
			        {
		 	        	printf("\n\t\t\t\t------------------------------------------");
						printf("\n\t\t\t\t<<<<<<<<<<<<<< LOGIN INCORRECT >>>>>>>>>>>");
						printf("\n\t\t\t\t------------------------------------------");
			        	log();
 		   	        }
 		   	    	fclose(fp1);
                }
			
	
}
void chicken_tikka()
{   
    char ch;
	printf("chicken_tikka_rec");
    FILE *fp;
	fp=fopen("chicken_tikka_rec.txt","r");
    if(fp==NULL)
    {   
     	printf("You dont have any record yet");
                    	 
    }
   	while(fscanf(fp,"\n%s  \n%s  \n%s  \n%s",coustomer.name,coustomer.email,coustomer.add,coustomer.ph)!=EOF)
  	printf("\n\t\t\t\t\t\t%s\n\t\t\t\t\t\t%s\n\t\t\t\t\t\t%s\n\t\t\t\t\t\t%s",coustomer.name,coustomer.email,coustomer.add,coustomer.ph);
   	fclose(fp);
   	printf("\nDo You Want To Continue Shopping PRESS 'Y' And for Exit PRESS 'N'\n");
	fflush(stdin);
	scanf("%c",&ch);
	if((ch=='Y')||(ch=='y'))
	{
		go();
	}
}
