				fflush(stdin);
				scanf("%c",&ch);
				if((ch=='Y')||(ch=='y'))
				{
					go();
					   	 	
				}
			}
			else if(strcmp(field,"add")==0)
			{
				printf("Enter new data");
				
				scanf("%s",coustomer.add);
				
				fp1=fopen("tandor_chicken_coustomer_rec.txt","w");	
	        	fprintf(fp1,"\n\t\t\t\t\t\t%s\n\t\t\t\t\t\t%s\n\t\t\t\t\t\t%s\n\t\t\t\t\t\t%s",coustomer.name,coustomer.email,coustomer.add,coustomer.ph);
		
				printf("RECORD UPDATE'D");
				printf("\nDo You Want To Continue Shopping PRESS 'Y' And for Exit PRESS 'N'\n");
				fflush(stdin);
				scanf("%c",&ch);
				if((ch=='Y')||(ch=='y'))
				{
					go();
					   	 	
				}
			}
			else if(strcmp(field,"phone")==0)
			{
				printf("Enter new data");
				
				scanf("%s",coustomer.ph);
				
				fp1=fopen("tandor_chicken_coustomer_rec.txt","w");	
	        	fprintf(fp1,"\n\t\t\t\t\t\t%s\n\t\t\t\t\t\t%s\n\t\t\t\t\t\t%s\n\t\t\t\t\t\t%s",coustomer.name,coustomer.email,coustomer.add,coustomer.ph);
		
				printf("RECORD UPDATE'D");
				printf("\nDo You Want To Continue Shopping PRESS 'Y' And for Exit PRESS 'N'\n");
				fflush(stdin);
				scanf("%c",&ch);
				if((ch=='Y')||(ch=='y'))
				{
					go();
					   	 	
				}
			}
			else
			{
				printf("REC  not found");
			}
		}
	
		
	}	
	fclose(fp);
	fclose(fp1);
}
