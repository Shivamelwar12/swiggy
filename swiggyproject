void go()
{
	
	
		int ch,no,n1,n2,n3,n4;
		char ch1;
		printf("\n\t\t\t\t\t Enter your choice");
		printf("\n\t\t\t\t\t 1.....NON-VEGETARIAN");
		printf("\n\t\t\t\t\t 2.....VEGETARIAN");
		printf("\n\t\t\t\t\t 3.....Show Record");
		printf("\n\t\t\t\t\t 4.....Update record");
		printf("\n\t\t\t\t\t 5.....Delete Record");
		scanf("%d",&ch);
		
		switch(ch)
		{
			case 1:	printf("\n\t\t\t\t------------------------------------------");
					printf("\n\t\t\t\t<<<<<<<<<<<<<<<<<< NON-VEG >>>>>>>>>>>>>>>\n");
					printf("\t\t\t\t------------------------------------------\n");
    	           	printf("\n\t\t\t\t\t   Select your choise");
    	           	printf("\n\t\t\t\t\t   1...Chicken Tikka Masala");
					printf("\n\t\t\t\t\t   2...Tandoori Chicken");
					printf("\n\t\t\t\t\t   3...Chicken Biryani");
					printf("\n\t\t\t\t\t   4...Chicken Lollipop");
	               	scanf("%d",&no);
	          
	        	  	switch(no)
	        	 	{
	        	  		case 1:	printf("\n\t\t\t\t------------------------------------------");
								printf("\n\t\t\t\t<<<<<<<<<< CHICKEN TIKKA MASALA >>>>>>>>>>");
								printf("\n\t\t\t\t------------------------------------------");
					 			printf("\n \t\t\t\t OFFER \t       :GET UPTO 50% OFF ON YOUR FIRST ORDER");
					 			printf("\n \t\t\t\t Punjabi Rasoi :4.1(500+).47mins");
								printf("\n \t\t\t\t Quantity      :Half Plate");
					 			printf("\n \t\t\t\t Rating\t       :Bestseller");
								printf("\n \t\t\t\t Price\t       :Rs 299/-");
								printf("\n \t\t\t\t +3 plain Tandoori rotis");
								printf("\n \t\t\t\t Free Delivery");
					 			printf("\n \t\t\t\t ORDER NOW(Y/N) ");
				 				fflush(stdin);
                    			scanf("%c",&ch);
                    			if((ch=='Y')||(ch=='y'))
                     			{	
                     		
                    				FILE *fp1;
                    				fp1=fopen("chicken_tikka_rec.txt","a");
                        			fflush(stdin);            
                        			printf("\n\t\t\t\t\tEnter you Name:-");
									scanf("%s",coustomer.name);
									fflush(stdin);
        							printf("\n\t\t\t\t\tenter your Email:-");
									scanf("%s",coustomer.email);
									fflush(stdin);
                        			printf("\n\t\t\t\t\tenter your adderess:-");
									scanf("%s",coustomer.add);
									fflush(stdin);
			            			printf("\n\t\t\t\t\tenter your phone number:-");
									scanf("%s",coustomer.ph);
									fflush(stdin);
                         			fprintf(fp1,"%s \n%s \n%s \n%s\n",coustomer.name,coustomer.email,coustomer.add,coustomer.ph);
                         
					   	 			printf("\n\t\t\t\t\tYour Order is confirmed");
					   	 			printf("\n\t\t\t\t\tDo Want To Continue Purchasing");
					   	 			fflush(stdin);
					   	 			scanf("%c",&ch);
					   	 			if((ch=='Y')||(ch=='y'))
					   	 			{
					   	 				go();
					   	 	
						 			}    
                         			fclose(fp1); 
                         				
				     			}	
                     			break;
					    case 2:	printf("\n\t\t\t\t------------------------------------------");
								printf("\n\t\t\t\t<<<<<<<<<< TANDOORI CHICKEN >>>>>>>>>>");
								printf("\n\t\t\t\t------------------------------------------");
								printf("\n \t\t\t\t OFFER\t  : GET UPTO 50% OFF ON YOUR ORDER");
				 				printf("\n \t\t\t\t COURSE\t  : Main-Course,Starter");
								printf("\n \t\t\t\t QUALITY  : Fresh Food");
								printf("\n \t\t\t\t QUANTITY : Full-Plate");
				 				printf("\n \t\t\t\t CATEGORY : Non-veg");
				 				printf("\n \t\t\t\t PRICE\t  : Rs 499/-");
								printf("\n \t\t\t\t FREE DELIVERY");
				 				printf("\n \t\t\t\t ORDER NOW(Y/N)");
				 				fflush(stdin);
                    			scanf("%c",&ch);
                     			if((ch=='Y')||(ch=='y'))
                     			{
                     	
                     				FILE *fp2;
                         			fp2=fopen("tandor_chicken_coustomer_rec.txt","a");
                         			fflush(stdin);            
                         			printf("\n \t\t\t\t Enter Your Name:-");
						 			scanf("%s",coustomer.name);
						 			fflush(stdin);
                         			printf("\n \t\t\t\t Enter Your Email:-");
									scanf("%s",coustomer.email);
									fflush(stdin);
                        			printf("\n \t\t\t\t Enter Your Adderess:-");
									scanf("%s",coustomer.add);
									fflush(stdin);
                        			printf("\n \t\t\t\t Enter Your Phone Number:-");
									scanf("%s",coustomer.ph);
